{% extends 'parent.html.twig' %}
{% block Title %}page annonce{% endblock %}
{% block titre1 %}
<h1>galerie</h1>
{% endblock %}

{% block content %}
    <table class="table">
        {% for annonce in annonces %}
           
                <p>{{ annonce.titre }}</p>
                <p>{{ annonce.contenu }}</p>
                     {% if annonce.categories|length > 0 %}
                    {% for categorie in annonce.categories %}
                    <p>{{categorie.label}}</p>
                    {% endfor %}
                {% endif %}
                <p>publi√© par {{annonce.user.username}}</p>
                <img src="{{ asset('uploads/' ~ annonce.image) }}" class="img-fluid">
                <p>{{ annonce.datePublication ? annonce.datePublication|date('d m Y H:i') : '' }}</p>
                 <a href="{{ path('annonce', {'slug': annonce.slug, 'id':annonce.id}) }}">show</a>
        {% else %}
            <p>
             no records found
            </p>
        {% endfor %}
        </tbody>
{% endblock %}

